<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C4043"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lawyer_registration"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="648dp"
        android:fontFamily="@font/bold"
        android:text="@string/lawyer_registration"
        android:textAlignment="center"
        android:textColor="#ccba8a"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/lawyer"
        android:layout_width="151dp"
        android:layout_height="151dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="131dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="472dp"
        android:contentDescription="@string/lawyer_icon"
        app:srcCompat="@drawable/lawyer_icon" />


    <EditText
        android:id="@+id/first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="301dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="393dp"
        android:background="#1ACCBA8A"
        android:drawableStart="@drawable/ic_person_24px"
        android:drawablePadding="5dp"
        android:fontFamily="@font/light"
        android:hint="@string/first_name"
        android:importantForAutofill="no"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:textColorHint="#ccba8a"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="344dp"
        android:background="#1ACCBA8A"
        android:drawableStart="@drawable/ic_person_24px"
        android:drawablePadding="5dp"
        android:fontFamily="@font/light"
        android:hint="@string/last_name"
        android:importantForAutofill="no"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:textColorHint="#ccba8a"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="398dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="296dp"
        android:background="#1ACCBA8A"
        android:drawableStart="@drawable/ic_local_post_office_24px"
        android:drawablePadding="5dp"
        android:fontFamily="@font/light"
        android:hint="@string/email"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:textColorHint="#ccba8a"
        android:textSize="12sp" />


    <EditText
        android:id="@+id/phone_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="445dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="249dp"
        android:background="#1ACCBA8A"
        android:drawableStart="@drawable/ic_phone_in_talk_24px"
        android:drawablePadding="5dp"
        android:fontFamily="@font/light"
        android:hint="@string/phone_no"
        android:importantForAutofill="no"
        android:inputType="phone"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:textColorHint="#ccba8a"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="492dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="202dp"
        android:background="#1ACCBA8A"
        android:drawableStart="@drawable/ic_place_24px"
        android:drawablePadding="5dp"
        android:fontFamily="@font/light"
        android:hint="@string/city"
        android:importantForAutofill="no"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:textColorHint="#ccba8a"
        android:textSize="12sp" />


    <EditText
        android:id="@+id/reference_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="537dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="157dp"
        android:background="#1ACCBA8A"
        android:drawableStart="@drawable/ic_place_24px"
        android:drawablePadding="5dp"
        android:fontFamily="@font/light"
        android:hint="@string/reference_no"
        android:importantForAutofill="no"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:textColorHint="#ccba8a"
        android:textSize="12sp" />



</RelativeLayout>


