<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C4043"
    android:textColor="@color/colorAccent"
    tools:context=".ScheduleCustomerActivity">


    <TextView
        android:id="@+id/heading_label"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="96dp"
        android:fontFamily="@font/bold"
        android:text="@string/lawyers_search"
        android:textAlignment="center"
        android:textColor="#ccba8a"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/city"
        style="@style/MySpinnerLook"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="320dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="600dp"
        android:drawableStart="@drawable/ic_place_24px"
        android:drawableEnd="@drawable/ic_arrow_drop_down_24px"
        android:drawablePadding="5dp"
        android:fontFamily="@font/light"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:popupBackground="@drawable/drop_down"
        android:textColor="#ccba8a"
        android:textColorHint="#ccba8a"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/case_type"
        style="@style/MySpinnerLook"
        android:layout_width="104dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="170dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="170dp"
        android:layout_marginBottom="600dp"
        android:drawableStart="@drawable/ic_work_24px"
        android:drawableEnd="@drawable/ic_arrow_drop_down_24px"
        android:drawablePadding="5dp"
        android:fontFamily="@font/light"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:popupBackground="@drawable/drop_down"
        android:textColor="#ccba8a"
        android:textColorHint="#ccba8a"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/cash_type"
        style="@style/MySpinnerLook"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="320dp"
        android:layout_marginBottom="600dp"
        android:drawableStart="@drawable/ic_work_24px"
        android:drawableEnd="@drawable/ic_arrow_drop_down_24px"
        android:drawablePadding="5dp"
        android:fontFamily="@font/light"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:popupBackground="@drawable/drop_down"
        android:textColor="#ccba8a"
        android:textColorHint="#ccba8a"
        android:textSize="16sp" />

    <Button
        android:id="@+id/search_btn"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="170dp"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="170dp"
        android:layout_marginBottom="541dp"
        android:background="@drawable/button"
        android:textColor="@color/colorPrimaryDark"
        android:contentDescription="@string/todo_1"
        android:text="@string/search"
        app:srcCompat="@drawable/ic_search_24px" />


    <Spinner
        android:id="@+id/city_spinner"
        android:layout_width="124dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="320dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="600dp"
        android:background="@drawable/edit_text"
        android:drawableEnd="@drawable/ic_arrow_drop_down_24px"
        android:drawablePadding="5dp"
        android:fontFamily="@font/light"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:popupBackground="@drawable/drop_down"
        android:popupTheme="@color/colorAccent"
        android:spinnerMode="dropdown"
        android:textSize="16sp" />


    <Spinner
        android:id="@+id/case_spinner"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="170dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="170dp"
        android:layout_marginBottom="600dp"
        android:background="@drawable/edit_text"
        android:drawableEnd="@drawable/ic_arrow_drop_down_24px"
        android:drawablePadding="5dp"
        android:fontFamily="@font/light"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:popupBackground="@drawable/drop_down"
        android:popupTheme="@color/colorAccent"
        android:spinnerMode="dropdown"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/cash_spinner"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="320dp"
        android:layout_marginBottom="600dp"
        android:background="@drawable/edit_text"
        android:drawableEnd="@drawable/ic_arrow_drop_down_24px"
        android:drawablePadding="5dp"
        android:fontFamily="@font/light"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:popupBackground="@drawable/drop_down"
        android:popupTheme="@color/colorAccent"
        android:spinnerMode="dropdown"
        android:textSize="16sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/result_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"></android.support.v7.widget.RecyclerView>



</RelativeLayout>
