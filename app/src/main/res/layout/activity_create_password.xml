<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C4043"
    tools:context=".createPassword">

    <TextView
        android:id="@+id/create_your_passsword"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="649dp"
        android:fontFamily="@font/bold"
        android:text="@string/create_your_password"
        android:textAlignment="center"
        android:textColor="#ccba8a"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/password_icon"
        android:layout_width="151dp"
        android:layout_height="151dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="131dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="472dp"
        android:contentDescription="@string/password_icon"
        app:srcCompat="@drawable/password_icon"/>


    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="301dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="393dp"
        android:background="#1ACCBA8A"
        android:drawableStart="@drawable/ic_https_24px"
        android:drawablePadding="5dp"
        android:fontFamily="@font/light"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:textColorHint="#ccba8a"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/re_renter_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="344dp"
        android:background="#1ACCBA8A"
        android:drawableStart="@drawable/ic_vpn_key_24px"
        android:drawablePadding="5dp"
        android:fontFamily="@font/light"
        android:hint="@string/re_enter_password"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:textColorHint="#ccba8a"
        android:textSize="12sp" />

    <Button
        android:id="@+id/create_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="250dp"
        android:layout_marginTop="585dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="101dp"
        android:background="#ccba8a"
        android:text="@string/create_password"
        android:textColor="#3C4043" />

</RelativeLayout>